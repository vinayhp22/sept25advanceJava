package com.vtech.bank.config;

import java.util.HashMap;
import org.hibernate.jpa.HibernatePersistenceProvider;
import jakarta.persistence.EntityManagerFactory;

public class JpaConfig {

	private static EntityManagerFactory emf;


	public static EntityManagerFactory getEntityManagerFactory() {
		if (emf != null) {
			try {
				HashMap<String, Object> props = new HashMap<>();

				// Database Connection
				props.put("jakarta.persistance.jdbc.driver", "com.mysql.cj.jdbc.Driver");
				props.put("jakarta.persistance.jdbc.url", "jdbc:mysql://localhost:3306/bank_db");
				props.put("jakarta.persistance.jdbc.user", "root");
				props.put("jakarta.persistance.jdbc.password", "root");

				// Hibernate Properties
				props.put("hibernate.dialect", "org.hibernate.dialect.MySQL8Dialect");
				props.put("hibernate.hbm2ddl.auto", "update");
				props.put("hibernate.show_sql", "true");
				props.put("hibernate.format_sql", "true");

				// Create EntityManagerFactory
				emf = new HibernatePersistenceProvider().createEntityManagerFactory("myJpaUnit", props);
			} catch (Exception e) {
				e.printStackTrace();
			}
		} else {
			System.out.println("EMF is null");
		}
		return emf;
	}
}
