package com.vtech.cm.controller;

import java.util.ArrayList;
import java.util.List;

import com.vtech.cm.model.Address;
import com.vtech.cm.repository.StudentRepository;
import com.vtech.cm.model.Course;
import com.vtech.cm.model.Department;
import com.vtech.cm.model.Student;

public class StudentController {

	public static void main(String[] args) {

		System.out.println("Hello");
		
		StudentRepository repo = new StudentRepository();
		
		Address address1 = new Address(1, "Bengaluru", "Karnataka");
		repo.saveAddress(address1);
		Department department1 = new Department(1, "CSE", null);
		repo.saveDepartment(department1);
		Course course1 = new Course(1, "Java Full Stack", null);
		repo.saveCourse(course1);
		List<Course> list1 = new ArrayList<Course>();
		list1.add(course1);
		
		Student student = new Student(1, "Laxman", address1, department1, null);
		
		repo.saveStudent(student);
	}

}
