package com.vtech.springhibernatedemo;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.context.ApplicationContext;
import org.springframework.context.annotation.AnnotationConfigApplicationContext;
import org.springframework.stereotype.Controller;
import com.vtech.springhibernatedemo.config.AppConfig;
import com.vtech.springhibernatedemo.entity.Student;
import com.vtech.springhibernatedemo.service.StudentService;

@Controller
public class Runner {
	
	private StudentService service;
	public static void main(String[] args) {
		
//		ApplicationContext context = new AnnotationConfigApplicationContext(AppConfig.class);
//		StudentService service = context.getBean(StudentService.class);
		
		Student student = new Student("Rajesh", "rajesh@gmail.com", 45);
		int rows = service.saveStudent(student);
		if(rows>0) {
			System.out.println("Added Successfully!!");
		}else {
			System.out.println("Error occured during adding...");
		}
	}
}
