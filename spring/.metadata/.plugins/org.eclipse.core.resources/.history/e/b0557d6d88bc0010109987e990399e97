        http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd"> <!-- bean definitions here -->
	
	<!-- Loading Hibernate configuration -->
	<bean id="sessionFactory" class="org.springframework.orm.hibernate5.LocalSessionFactoryBean.class">
		<property name="configuration" value="classpath:hibernate.cfg.xml">
	</bean>
	
	<!-- Transaction Manager -->
	<bean id="transactionManager" class="org.springframework.orm.hibernate5.HibernateTransactionManager.class">
		<property name="sessionFactory" ref="sessionFactory"></property>
	</bean>
	
	<!-- Enable - a -->
</beans>