package com.vtech.shdemo.dto;

import java.util.List;

import org.springframework.transaction.annotation.Transactional;

import com.vtech.shdemo.dao.StudentDAO;
import com.vtech.shdemo.entity.Student;
import com.vtech.shdemo.exceptions.InvalidStudentDataException;

public class StudentDTOImpl implements StudentDTO {

	private StudentDAO studentDAO;
	
	public void setStudentDAO(StudentDAO studentDAO) {
		this.studentDAO = studentDAO;
	}
	
	@Override
	public void addStudent(Student student) {
		validate(student);
		this.studentDAO.saveStudent(student);
	}

	@Override
	public Student getStudent(int id) {
		if(id<=0) {
			throw new InvalidStudentDataException("Id is less than zero, can't able to get the student data!!!");
		}
		return this.studentDAO.getStudent(id);
	}

	@Override
	public List<Student> getAllStudents() {
		return this.studentDAO.getAllStudents();
	}

	@Override
	public void updateStudent(Student student) {
		this.updateStudent(student);
	}

	@Override
	public void deleteStudent(int id) {
		this.studentDAO.deleteStudent(id);
	}
	
//	Validation Logic
	private void validate(Student student) {
		if(student == null) {
			throw new InvalidStudentDataException("Student Object is null");
		} 
		
		if(student.getName().trim().length()<=3) {
			throw new InvalidStudentDataException("Student name is less than 3 characters");
		}
	}



}
